<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70.8dp"
        android:text="FOOD CHAIN"
        android:textColor="#707070"
        android:textSize="38sp" />
</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="63dp">

        <ImageView
            android:layout_marginLeft="24dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/icon"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="16dp"

            android:layout_marginLeft="11dp">
        <EditText
            android:id="@+id/login_id"
            android:hint="이메일 또는 전화번호"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_width="290dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"/>
        </RelativeLayout>


    </LinearLayout>

    <View

        android:layout_alignParentBottom="true"
        android:layout_width="314dp"
        android:layout_height="1dp"
        android:background="#2e8b57"
        android:layout_marginTop="7dp"
        android:layout_gravity="center_horizontal"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="43.2dp">

        <ImageView
            android:layout_marginLeft="24dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/pic1"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginLeft="11dp">
            <EditText
                android:id="@+id/login_pwd"
                android:hint="비밀번호"
                android:textSize="13sp"
                android:textColor="#000000"
                android:layout_width="290dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"/>
        </RelativeLayout>

    </LinearLayout>

    <View

        android:layout_alignParentBottom="true"

        android:layout_width="314dp"
        android:layout_height="1dp"
        android:background="#2e8b57"
        android:layout_marginTop="7dp"
        android:layout_gravity="center_horizontal"
        />


    <RelativeLayout
        android:layout_marginTop="53.8dp"
        android:layout_marginBottom="45.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageButton
        android:layout_width="251dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
       android:src="@drawable/login_button_not"
        />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"

         android:layout_centerHorizontal="true">
        <View

            android:layout_width="94dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="#2e8b57"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/login_or_txt"
            />

        <TextView

            android:id="@+id/login_or_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textColor="#2e8b57"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            />

        <View
            android:layout_marginLeft="7dp"
            android:layout_width="98dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="#2e8b57"
            android:layout_toRightOf="@+id/login_or_txt"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="53.8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/login_kakao"
            android:layout_width="251dp"
            android:layout_height="38dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/kakao_button"
            />
    </RelativeLayout>

    <RelativeLayout

        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="20.16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="39.52dp">

        <TextView
            android:id="@+id/login_find_id"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="아이디 찾기"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:layout_toLeftOf="@id/login_bar1"
            android:layout_marginRight="19.12dp"/>

        <View
            android:id="@+id/login_bar1"
            android:layout_width="1dp"
            android:layout_height="20.16dp"
            android:background="#707070"
            android:layout_toLeftOf="@+id/login_search_pwd"
            android:layout_marginRight="12dp"
            />

        <TextView
            android:id="@+id/login_search_pwd"
            android:layout_width="74dp"
            android:layout_height="16dp"
            android:layout_centerInParent="true"
            android:text="비밀번호 찾기"
            android:textColor="#000000"
            android:textSize="12dp"
            android:textAlignment="center"/>

        <View
            android:id="@+id/login_bar2"
            android:layout_width="1dp"
            android:layout_height="20.16dp"
            android:background="#707070"
            android:layout_toRightOf="@+id/login_search_pwd"
            android:layout_marginLeft="14.8dp"
            />

        <TextView
            android:layout_width="48dp"
            android:layout_height="16dp"
            android:text="회원가입"
            android:textColor="#000000"
            android:id="@+id/login_sign"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/login_bar2"
            android:layout_marginLeft="12dp"/>

    </RelativeLayout>

</LinearLayout>