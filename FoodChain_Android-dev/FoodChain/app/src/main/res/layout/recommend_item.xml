<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:layout_height="270dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_height="145dp"
        android:layout_width="match_parent">

    <ImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/recypic"
        android:src="@drawable/pic1"/>

</RelativeLayout>


    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/recyname"
        android:text="dfdf"
        android:textColor="#000000"
        android:textSize="13dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:layout_height="16dp"
        android:layout_width="16dp"
        android:id="@+id/recyheart"
        android:src="@drawable/heart"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="330dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/recydetail"
        android:text="dfdf"
        android:textColor="#000000"
        android:textSize="13dp"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="25dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/recyper"
        android:text="dfdf"
        android:textColor="#000000"
        android:textSize="28dp"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="13dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/recyoriginprice"
        android:text="dfdf"
        android:textColor="#000000"
        android:textSize="14dp"
        android:layout_marginTop="62dp"
        android:layout_marginLeft="80dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/recynewprice"
        android:text="dfdf"
        android:textColor="#000000"
        android:textSize="23dp"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="80dp"/>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#707070"
            android:layout_marginBottom="20dp"/>

</RelativeLayout>

</LinearLayout>