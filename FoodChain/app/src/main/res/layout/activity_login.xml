<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="238dp"
        android:layout_height="53dp"
        android:text="FOOD CHAIN"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="#707070"
        android:layout_marginTop="62dp"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:layout_width="327dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        >
        
        <ImageView
            android:id="@+id/login_user_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/login_user_icon"
            />

        <EditText
            android:layout_width="319dp"
            android:layout_height="14dp"
            android:background="@null"
            android:hint="User Name"
            android:textColorHint="#000000"

            android:textSize="14dp"
            android:layout_toRightOf="@+id/login_user_iv"
            android:layout_marginLeft="12dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

        <View
            android:layout_width="327dp"
            android:layout_height="1dp"
            android:background="#2E8B57"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="327dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="16dp"
            >

            <ImageView
                android:id="@+id/login_icon_iv"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/login_mail_icon"
                />

            <EditText
                android:layout_width="319dp"
                android:layout_height="14dp"
                android:background="@null"
                android:hint="Password"
                android:textColorHint="#000000"

                android:textSize="14dp"
                android:layout_toRightOf="@+id/login_icon_iv"
                android:layout_marginLeft="12dp"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <View
            android:layout_width="327dp"
            android:layout_height="1dp"
            android:background="#2E8B57"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    
    <ImageButton
        android:id="@+id/login_login_btn"
        android:layout_width="251dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="315dp"
        android:background="@drawable/login_login_button"
        android:textAllCaps="false"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="16dp"/>
    
    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="21dp"
        android:layout_marginTop="382dp"
        android:layout_centerHorizontal="true">

        <View
            android:layout_width="98dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="#2E8B57"
            android:layout_toLeftOf="@+id/login_or_txt"
            />
        
        <TextView
            android:id="@+id/login_or_txt"
            android:layout_width="39dp"
            android:layout_height="21dp"
            android:text="or"
            android:textColor="#2E8B57"
            android:textSize="16dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"/>

        <View
            android:layout_width="98dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="#2E8B57"
            android:layout_toRightOf="@+id/login_or_txt"
            />
    </RelativeLayout>


    <Button
        android:layout_width="251dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="437dp"
        android:background="@drawable/login_kakao_button"
        android:textAllCaps="false"
        android:text="Kakao"
        android:textColor="#FFFFFF"
        android:textSize="16dp"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="41.5dp">

        <TextView
            android:layout_width="68dp"
            android:layout_height="17dp"
            android:text="아이디 찾기"
            android:textColor="#000000"
            android:textSize="13dp"
            android:textAlignment="center"
            android:layout_toLeftOf="@id/login_bar1"
            android:layout_marginRight="16.5dp"/>

        <View
            android:id="@+id/login_bar1"
            android:layout_width="1dp"
            android:layout_height="21dp"
            android:background="#707070"
            android:layout_toLeftOf="@+id/login_searchPW_txt"
            android:layout_marginRight="11.5dp"
            />

        <TextView
            android:id="@+id/login_searchPW_txt"
            android:layout_width="82dp"
            android:layout_height="17dp"
            android:layout_centerInParent="true"
            android:text="비밀번호 찾기"
            android:textColor="#000000"
            android:textSize="13dp"
            android:textAlignment="center"/>

        <View
            android:id="@+id/login_bar2"
            android:layout_width="1dp"
            android:layout_height="21dp"
            android:background="#707070"
            android:layout_toRightOf="@+id/login_searchPW_txt"
            android:layout_marginLeft="11.5dp"
            />

        <TextView
            android:layout_width="52dp"
            android:layout_height="17dp"
            android:text="회원가입"
            android:textColor="#000000"
            android:textSize="13dp"
            android:textAlignment="center"
            android:layout_toRightOf="@id/login_bar2"
            android:layout_marginLeft="12.5dp"/>


    </RelativeLayout>

</RelativeLayout>