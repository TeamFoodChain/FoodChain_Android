<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64.32dp"
        android:text="FOOD CHAIN"
        android:textAlignment="center"
        android:textColor="#707070"
        android:textSize="38dp" />

    <RelativeLayout
        android:layout_width="313.92dp"
        android:layout_height="32.64dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="163.2dp"
        android:background="@drawable/name">
        
        <EditText
            android:layout_alignParentRight="true"
            android:layout_width="290dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="313.92dp"
        android:layout_height="32.64dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="233.28dp"
        android:background="@drawable/email">

        <EditText
            android:layout_alignParentRight="true"
            android:layout_width="290dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"/>

    </RelativeLayout>

    <ImageButton
        android:layout_width="251dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="316.8dp"
        android:background="@drawable/login"
        />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="396.38dp"
        android:layout_centerHorizontal="true">

        <View
            android:layout_width="94dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="#BDEB64"
            android:layout_toLeftOf="@+id/login_or_txt"
            />
        
        <TextView
            android:id="@+id/login_or_txt"
            android:layout_width="37.44dp"
            android:layout_height="16dp"
            android:text="or"
            android:textColor="#8CD700"
            android:textSize="14dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            />

        <View
            android:layout_width="98dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="#BDEB64"
            android:layout_toRightOf="@+id/login_or_txt"
            />
    </RelativeLayout>


    <ImageButton
        android:layout_width="251dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="460.8dp"
        android:background="@drawable/kakao"
        />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20.16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="39.52dp">

        <TextView
            android:layout_width="62dp"
            android:layout_height="16dp"
            android:text="아이디 찾기"
            android:textColor="#000000"
            android:textSize="12dp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:layout_toLeftOf="@id/login_bar1"
            android:layout_marginRight="19.12dp"/>

        <View
            android:id="@+id/login_bar1"
            android:layout_width="1dp"
            android:layout_height="20.16dp"
            android:background="#707070"
            android:layout_toLeftOf="@+id/login_searchPW_txt"
            android:layout_marginRight="12dp"
            />

        <TextView
            android:id="@+id/login_searchPW_txt"
            android:layout_width="74dp"
            android:layout_height="16dp"
            android:layout_centerInParent="true"
            android:text="비밀번호 찾기"
            android:textColor="#000000"
            android:textSize="12dp"
            android:textAlignment="center"/>

        <View
            android:id="@+id/login_bar2"
            android:layout_width="1dp"
            android:layout_height="20.16dp"
            android:background="#707070"
            android:layout_toRightOf="@+id/login_searchPW_txt"
            android:layout_marginLeft="14.8dp"
            />

        <TextView
            android:layout_width="48dp"
            android:layout_height="16dp"
            android:text="회원가입"
            android:textColor="#000000"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/login_bar2"
            android:layout_marginLeft="12dp"/>


    </RelativeLayout>

</RelativeLayout>